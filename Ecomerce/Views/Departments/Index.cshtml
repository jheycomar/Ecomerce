@model IEnumerable<Ecomerce.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   
    <a class="btn btn-primary" href="/Departments/Create">Create New<span class="glyphicon-plus"></span></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a class="btn btn-warning" href="/Departments/Edit/@item.DepartmentId">Edit<span class="glyphicon glyphicon-edit"></span></a>
            <a class="btn btn-info" href="/Departments/Details/@item.DepartmentId">Details<span class="glyphicon glyphicon-exclamation-sign"></span></a>
            <a class="btn btn-danger" href="/Departments/Delete/@item.DepartmentId">Delete<span class="glyphicon glyphicon-trash"></span></a>
           
        </td>
    </tr>
}

</table>
